extends layout

block header
    include headerSlider

block content
    .container-fluid.page_title2
        .container
            .col-md-12
                h1 home
    .container(ng-controller="AlertDemoCtrl")
        div.row(ng-repeat="alert in alerts")
            .alert.alert-dismissible(class="{{alert.type}}", class="col-md-{{alert.col}}")
                button(type="button", class="close", data-dismiss="alert") x
                strong(ng-if="alert.hasOwnProperty('strong')") {{alert.strong}}
                a(ng-if="alert.hasOwnProperty('href1')", href="#") {{alert.href1}}
                | {{alert.msg}}
                a(ng-if="alert.hasOwnProperty('href2')", href="#") {{alert.href2}}
        button.btn.btn-default(ng-click="addAlert()") Add Alert
