                    a(href='users') Link
                    if navLink == 'active'
                        span.sr-only (current)
                li.dropdown(class=navDrop)
                    a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false', ng-click="home=false;link=false;dropdown=true;") Dropdown
                        span.caret
                    ul.dropdown-menu(role='menu')
